{
  "dashboard": {
    "id": null,
    "title": "DCMAIDBot Enhanced Status System",
    "tags": ["dcmaidbot", "status", "llm", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "System Status Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"dcmaidbot\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "title": "Bot Uptime",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "dcmaidbot_uptime_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 300},
                {"color": "red", "value": 60}
              ]
            }
          }
        }
      },
      {
        "title": "Version Thoughts Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "time() - dcmaidbot_version_thoughts_timestamp",
            "legendFormat": "Age"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3600},
                {"color": "red", "value": 7200}
              ]
            }
          }
        }
      },
      {
        "title": "Self-Check Thoughts Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "time() - dcmaidbot_self_check_thoughts_timestamp",
            "legendFormat": "Age"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1800},
                {"color": "red", "value": 3600}
              ]
            }
          }
        }
      },
      {
        "title": "Self-Check Duration",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "dcmaidbot_self_check_duration_seconds",
            "legendFormat": "Duration"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 120},
                {"color": "red", "value": 300}
              ]
            }
          }
        }
      },
      {
        "title": "Crypto Thoughts Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "time() - dcmaidbot_crypto_thoughts_timestamp",
            "legendFormat": "Age"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 43200},
                {"color": "red", "value": 86400}
              ]
            }
          }
        }
      },
      {
        "title": "Database Connection Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "dcmaidbot_database_connected",
            "legendFormat": "Database"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DISCONNECTED", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "CONNECTED", "color": "green"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "title": "Redis Connection Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "dcmaidbot_redis_connected",
            "legendFormat": "Redis"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DISCONNECTED", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "CONNECTED", "color": "green"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "title": "LLM Judge Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "dcmaidbot_llm_judge_score",
            "legendFormat": "Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        }
      },
      {
        "title": "Business Test Pass Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "dcmaidbot_business_test_pass_rate",
            "legendFormat": "Pass Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.9},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        }
      },
      {
        "title": "Token Usage Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(dcmaidbot_tokens_total[5m])",
            "legendFormat": "Tokens/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Tokens per Second"
          }
        ]
      },
      {
        "title": "Total Token Usage",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "dcmaidbot_tokens_total",
            "legendFormat": "Total Tokens"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "title": "LLM Response Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(dcmaidbot_llm_response_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(dcmaidbot_llm_response_time_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds"
          }
        ]
      },
      {
        "title": "LLM Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(dcmaidbot_llm_errors_total[5m]) / rate(dcmaidbot_llm_requests_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate",
            "max": 1,
            "min": 0
          }
        ]
      },
      {
        "title": "System Resources",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "dcmaidbot_memory_usage_bytes / dcmaidbot_memory_limit_bytes",
            "legendFormat": "Memory Usage"
          },
          {
            "expr": "rate(dcmaidbot_cpu_seconds_total[5m])",
            "legendFormat": "CPU Usage"
          }
        ],
        "yAxes": [
          {
            "label": "Usage",
            "max": 1,
            "min": 0
          }
        ]
      },
      {
        "title": "Nudge System Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "dcmaidbot_nudge_unread_count",
            "legendFormat": "Unread Nudges"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "title": "Status Judge Results",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "dcmaidbot_status_judge_results",
            "legendFormat": "{{instance}}",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
