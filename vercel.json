{
  "version": 2,
  "builds": [
    { 
      "src": "api/*.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    { "src": "/", "dest": "/api/index.py" },
    { "src": "/webhook", "dest": "/api/webhook.py" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ]
} 